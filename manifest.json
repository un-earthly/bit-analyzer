{
    "manifest_version": 3,
    "name": "Advanced Mail Tracker",
    "version": "1.0",
    "description": "Tracks email opens, link clicks, and attachment downloads in Gmail.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://mail.google.com/*",
        "http://localhost:6060/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}